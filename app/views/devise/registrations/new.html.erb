<div class="container">
  <div class="row">
    <div class="registration-new col-10 offset-1 col-lg-6 offset-lg-3">
      <h4 class="my-5 text-center"><strong>新規アカウントの作成</strong></h4>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true, class: 'col-12 mb-3' %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-12 mb-3' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 桁以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'col-12 mb-3' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-12 mb-3' %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "登録する", class: "btn  btn-info btn-block" %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-12 mt-5">
          <p class="text-center"><%= link_to "アカウントをお持ちの方はこちら", new_user_session_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>