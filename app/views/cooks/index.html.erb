<div class="container">
  <div class="row">
    <div class="cooks-index col-12 col-lg-10 offset-lg-1">

      <div class="col-12 border border-warning rounded mt-3">
        <h4 class="row p-2 pl-3" style="background:#ffdead"><strong><i class="fas fa-utensils"></i> みんなの料理一覧</strong></h4>

        <div class="col-12 p-0">
          <!--検索ボックス-->
           <div class="searchbox row mt-2">
            <%= search_form_for @q, url: cooks_path, class:"col-12 mt-2" do |f| %>
            <%= f.search_field :cooking_name_or_recipe_cont, placeholder: '料理キーワード入力...', class:"mt-2" %>
            <%= f.submit ("検索") , class: "btn btn-sm btn-outline-success col-12 col-lg-2 mt-1" %>
            <%= link_to "クリア", cooks_path, class: "btn btn-sm btn-outline-primary col-12 col-lg-2 mt-1" %>
            <% end %>
        　</div>
        <!--end-->
          <!--end-->

          <div class="users-cooks col-12 p-0 d-flex flex-wrap">
            <div class="d-flex my-box-light flex-wrap justify-content-center p-0">
            <% @cooks.each do |cook| %>
            <table>
              <tr>
                <td>
                  <%= link_to cook_path(cook.id) do %>
                    <%= attachment_image_tag cook, :image, size:"150x150", format: 'jpeg', class:"m-1 rounded" %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td>
                <%= link_to cook_path(cook.id), style:"color:#8b0000;" do %><%= truncate(cook.cooking_name, length: 7) %><% end %>
                </td>
              </tr>
              <tr>
                <td class="user_nickname">
                <span class="text-secondary">
                  <i class="fas fa-user text-secondary"></i>
                  <%= link_to  truncate(cook.user.nickname, length: 7), "/users/#{cook.user.nickname}", class: "user_nickname text-secondary" %>
                </span>
                </td>
              </tr>
            </table>
            <% end %>
            </div>
            <div class="pagination col-12 mt-5 mb-3"><%= paginate @cooks %></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
