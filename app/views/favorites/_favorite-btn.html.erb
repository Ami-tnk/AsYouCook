<% if cook.favorited_by?(current_user) %>
  <p class="m-0">
    <%= link_to cook_favorites_path(cook), method: :delete, remote: true do %>
      <i class="fas fa-star"></i><%= cook.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p class="m-0">
    <%= link_to cook_favorites_path(cook), method: :post, remote: true do %>
      <i class="far fa-star"></i><%= cook.favorites.count %>
    <% end %>
  </p>
<% end %>