<div class="jumbotron jumbotron-extend">
  <div class="container-fluid jumbotron-container">
    <h1 class="text-white" style="font-size:70px;">AsYouCook</h1>
    <p><a class="btn btn-success btn-lg" href="/users/sign_up" role="button">はじめてみる</a></p>
  </div>
</div>

<div class="row">
  <div class="col-12 col-md-12 col-lg-10 offset-lg-1">
  <h4 class="col-12 col-md-12 mt-2">
    <strong>投稿されている新着料理</strong>
  </h4>

<div class="card-deck col-lg-12 pt-3 d-flex flex-wrap justify-content-center">
  <% @cooks.each do |cook| %>
  <div class="card m-4 shadow-lg" style="width: 13rem;">
    <%= attachment_image_tag cook, :image, :fill, 300, 200, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
          <p class="card-title">
            <strong><i class="fas fa-utensils"></i><span> <%= cook.cooking_name %></span></strong>
          </p>
          <p class="card-text">
            <span><i class="fas fa-user"></i> By <%= cook.user.nickname %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>