<h2>プロフィール編集</h2>
<%= form_with model: @user, url: '/users/:nickname', local:true do |f| %>

  <div class="field">
    <%= f.label :profile_image %><br />
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div>
    <%= f.submit "編集する" %>
  </div>
<% end %>

<div>
  <%= link_to "退会する", user_destroy_path(@user.nickname), method: :delete,
      "data-confirm" => "退会すると投稿した料理全てが削除されます。本当に退会しますか？", class: "btn btn-sm btn-danger" %>
</div>